<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  gsap.registerPlugin(ScrollTrigger);

  // Animar .aula-slide de izquierda a derecha
  gsap.utils.toArray('.aula-slide').forEach(elem => {
    gsap.from('.aula-slide', {
      x: -100, 
      opacity: 0,
      duration: 1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: '.aula-slide',
        start: "top 80%", 
        toggleActions: "play none none none",
      }
    });
  });
  // Animar .vehiculos-slide de derecha a izquierda
  gsap.utils.toArray('.vehiculos-slide').forEach(elem => {
    gsap.from('.vehiculos-slide', {
      x: 100, 
      opacity: 0,
      duration: 1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: '.vehiculos-slide',
        start: "top 80%",
        toggleActions: "play none none none",
      }
    });
  });
</script>
