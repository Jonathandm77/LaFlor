<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  const mdQuery = window.matchMedia("(max-width: 768px)");
  gsap.registerPlugin(ScrollTrigger);
  gsap.utils.toArray<HTMLElement>(".curso").forEach((elem, i) => {
    if (i === 0) return; // Salta el primer elemento, sin animar
    if (i === 1 && !mdQuery.matches) return;
    gsap.from(elem, {
      x: i % 2 === 0 ? -100 : 100,
      opacity: 0,
      duration: 1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: elem,
        start: "top 70%",
        toggleActions: "play none none none",
      },
    });
  });
</script>
